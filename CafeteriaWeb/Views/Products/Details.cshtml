@model CafeteriaWeb.Models.Product

@{
    ViewData["Title"] = "Detalhes";
}
<div class="page-card">
    <h1>Detalhes</h1>

    <div>
        <hr />
        <div class="row">
            <div class="col-3">
                <img id="imgProduct" src="@Url.Content(Model.ImgPath)" height="200" width="200" />
            </div>
            <div class="col-9">
                <div class="row">            
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Name):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Price):
                            </dt>
                            <dd class="col-sm-9" style="text-align:center">
                                R$@Html.DisplayFor(model => model.Price)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.IsFavorite)
                            </dt>
                            <dd class="col-sm-9" style="text-align:center">
                                @if (Model.IsFavorite)
                                {
                                    <i class="text-success fa-solid fa-circle-check"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-circle"></i>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.IsAvaible)
                            </dt>
                            <dd class="col-sm-9" style="text-align:center">
                                @if (Model.IsAvaible)
                                {
                                    <i class="text-success fa-solid fa-circle-check"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-circle"></i>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.SmallDescription):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.SmallDescription)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-6">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Description):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>
                    </div>                
                </div>
                <div class="row">
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.CreatedOn):
                            </dt>
                            <dd class="col-sm-9" style="text-align:center">
                                @Html.DisplayFor(model => model.CreatedOn)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-3">
                        <dl class="row">
                            <dt class="col-sm-5">
                                @Html.DisplayNameFor(model => model.ModifyedOn):
                            </dt>
                            <dd class="col-sm-7" style="text-align:center">
                                @Html.DisplayFor(model => model.ModifyedOn)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-6">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Category):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Category.Description)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>   
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            </div>
        </div>
        <div class="col-6 text" style="text-align: end">
            <div class="form-group">
                <a class="btn btn-secondary ml-2" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

