@using Microsoft.AspNetCore.Identity;
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafeteriaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafeteriaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notification.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/min/dropzone.min.css" />

    @*<link rel="SHORTCUT ICON" href="~/img/logo/favicon.png" />*@

    <style>
        .header {
            position: fixed;
            top: 0;
            z-index: 4;
        }
    </style>

</head>
<body style="background-color:#e9ecef">
@* <body> *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">CafeteriaWeb</a>
                <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-light"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i></a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Produtos</a>
                                    <div class="dropdown-menu">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="Products" asp-action="Index"><i class="fa-solid fa-mug-hot"></i> Produtos</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="nav-link text-primary" asp-area="" asp-controller="Categories" asp-action="Index"><i class="fa-solid fa-tag"></i> Categorias</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="AdminOrder" asp-action="Index">Pedidos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="Promotions" asp-action="Index">Promoções</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Fornecedores</a>
                                    <div class="dropdown-menu">
                                        <a class="nav-link text-primary" asp-area="Admin" asp-controller="Suppliers" asp-action="Index"><i class="fa-solid fa-clipboard-list"></i> Lista de Fornecedores</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="nav-link text-primary" asp-area="Admin" asp-controller="CategorySuppliers" asp-action="Index"><i class="fa-solid fa-tag"></i> Categorias de Fornecedores</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="Employees" asp-action="Index">Funcionários</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="Index">Pedidos <i class="fa-solid fa-receipt"></i></a>
                                </li>
                            </ul>
                        }
                        if (!User.IsInRole("Admin"))
                        {
                            <div style="margin-right:20px;" title="Carrinho">
                                @await Component.InvokeAsync("ShoppingCartResume")
                            </div>
                        }
                        <div style="margin-right:20px;">
                            @await Component.InvokeAsync("NotificationComponent")
                        </div>
                    }                                                           
                    
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    @* <div id="mainDiv" class="container" style="background-color:#f5f5f5"> *@
    <div id="mainDiv" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted" style="z-index:-1;">
        <div class="container">
            &copy; 2023 - CafeteriaWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/min/dropzone.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

