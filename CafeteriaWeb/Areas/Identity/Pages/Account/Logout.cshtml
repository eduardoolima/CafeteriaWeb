@page
@model LogoutModel
@{
    ViewData["Title"] = "Deslogar";
}
<div class="page-card">
    <header>
        <h1>@ViewData["Title"]</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Clique aqui para sair <i class="fa-solid fa-arrow-right-from-bracket"></i></button>
                </form>
            }
            else
            {
                <p>Você foi deslogado com sucesso.</p>
            }
        }
    </header>
</div>
