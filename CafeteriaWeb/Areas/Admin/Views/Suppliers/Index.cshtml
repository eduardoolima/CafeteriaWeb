@model IEnumerable<CafeteriaWeb.Models.Supplier>

@{
    ViewData["Title"] = "Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-card">

    <h1>Fornecedores</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Cadastrar Fornecedor</a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifyedOn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategorySupplier.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifyedOn)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="fa-solid fa-pen-to-square"></i></a>
                        @* <a class="btn btn-info text-light" asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes"><i class="fa-solid fa-circle-info"></i></a> *@
                        <a class="delete-button btn btn-danger" href="#" id="delete-button" data-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Excluir"><i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="modal" data-bs-backdrop="static" data-bs-keyboard="false">
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-button').click(function () {
                debugger
                var id = $(this).data('id');
                var id = $(this).attr("data-id");
                $("#modal").load("/Admin/Suppliers/Delete/" + id, function () {
                    $("#modal").modal("show");
                })
            });
        });

    </script>
}