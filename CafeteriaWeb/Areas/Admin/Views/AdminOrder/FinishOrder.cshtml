@model CafeteriaWeb.Models.Order

@{
    ViewData["Title"] = "Finalizar Pedido";
}

<div class="modal-dialog adjustment-modal">
    <div class="modal-content" style="z-index:100;">
        <div class="modal-header">
            <h1 class="modal-title">Finalizar Pedido</h1>
            <button type="button" class="close btn btn-danger" data-bs-dismiss="modal">
                <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span><span class="sr-only">Fechar</span>
            </button>
        </div>
        <div class="content-page" style="margin: 20px;">
            @if (Model.IsPaid)
            {
                <h4>Tem certeza que deseja finalizar este pedido?</h4>
            }
            else
            {
                <h4>Tem certeza que deseja marcar como pago e finalizar este pedido?</h4>
            }                        

            <div class="col-12">
                <form asp-action="FinishOrder">
                    <input id="inpid" type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <input type="submit" value="Finalizar" class="btn btn-success" />
                            </div>
                        </div>
                        <div class="col-6 text" style="text-align: end">
                            <div class="form-group">
                                <button type="button" class="close btn btn-secondary ml-2" data-bs-dismiss="modal">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

