@model CafeteriaWeb.Models.CategorySupplier

@{
    ViewData["Title"] = "Categorias";
}

<div class="modal-dialog adjustment-modal">
    <div class="modal-content" style="z-index:100;">
        <div class="modal-header">
            <h1 class="modal-title">Excluir Categoria</h1>
            <button type="button" class="close btn btn-danger" data-bs-dismiss="modal">
                <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span><span class="sr-only">Fechar</span>
            </button>
        </div>
        <div class="content-page" style="margin: 20px;">
            <h4>Tem certeza que deseja excluir?</h4>
            <p class="text-danger">Isso não poderá ser desfeito.</p>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <br />
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                        </div>
                    </div>
                    <div class="col-6 text" style="text-align: end">
                        <div class="form-group">
                            <button type="button" class="close btn btn-secondary ml-2" data-bs-dismiss="modal">
                                Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
